{
  "manifest_version": 3,
  "name": "Grocery Nutrition Extension",
  "version": "1.0",
  "description": "Displays nutritional values and similar items for grocery cart items.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png"
    }
  },
  "icons": {
    "16": "images/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}